

<% List.all.each do |list| %>
  <% if list.has_show?(show) %>
    <%= button_to "Remove from #{list.name.upcase}", controller: "shows", action: "update", list_id: list.id, id: show.id %>
  <% else %>
    <%= button_to "Add to #{list.name.upcase}", controller: "shows", action: "update", list_id: list.id, id: show.id %>
  <% end %>
<% end %>


